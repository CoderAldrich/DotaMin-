<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:foreground="?android:selectableItemBackground"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="4dp"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:padding="5dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_history_hero_name"
                android:text="英雄名"/>
            <ImageView
                android:layout_width="128px"
                android:layout_height="128px"
                android:id="@+id/iv_history_hero_avater"
                android:background="@color/material_blue"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_history_k"
                android:text="K 10"
                android:layout_gravity="center_vertical"
                android:textSize="8pt"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_history_d"
                android:text="D 10"
                android:layout_gravity="center_vertical"
                android:textSize="8pt"
                android:layout_alignTop="@+id/tv_history_k"
                android:layout_toRightOf="@+id/tv_history_k"
                android:layout_toEndOf="@+id/tv_history_k"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_history_a"
                android:text="A 10"
                android:layout_gravity="center_vertical"
                android:textSize="8pt"
                android:layout_alignTop="@+id/tv_history_d"
                android:layout_toRightOf="@+id/tv_history_time"
                android:layout_toEndOf="@+id/tv_history_time"
                android:layout_marginLeft="22dp"
                android:layout_marginStart="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_history_team"
                android:text="天辉"
                android:layout_gravity="bottom"
                android:layout_alignTop="@+id/tv_history_type"
                android:layout_alignRight="@+id/tv_history_k"
                android:layout_alignEnd="@+id/tv_history_k" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_history_win"
                android:text="胜"
                android:textSize="10pt"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:layout_alignBottom="@+id/tv_history_a"
                android:layout_alignLeft="@+id/tv_history_type"
                android:layout_alignStart="@+id/tv_history_type" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_history_time"
                android:text="比赛时间"
                android:layout_alignBaseline="@+id/tv_history_team"
                android:layout_alignBottom="@+id/tv_history_team"
                android:layout_alignLeft="@+id/tv_history_d"
                android:layout_alignStart="@+id/tv_history_d" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_history_type"
                android:text="比赛模式"
                android:layout_marginRight="21dp"
                android:layout_marginEnd="21dp"
                android:layout_above="@+id/tv_history_win"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="12dp" />
        </RelativeLayout>


    </LinearLayout>



</android.support.v7.widget.CardView>